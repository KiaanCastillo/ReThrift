{
    "manifest_version": 3,
    "name": "Thrufty",
    "version": "0.1",
    "web_accessible_resources": [
        {
            "resources": [ "assets/icon.png" ],
            "matches": [ "https://web-accessible-resources-1.glitch.me/*" ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "Content.js"
            ]
        }
    ],
    "permissions": [
        "tabs",
        "storage"
    ],
    "background": {
        "service_worker": "Background.js"
    },
    "action": {
        "default_icon": "./assets/icon.png",
        "default_title": "Thrufty popup"
    }
}